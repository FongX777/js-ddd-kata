{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-dupe-keys": "error",
    "no-dupe-class-members": "error",
    "semi": ["error", "always"],
    "comma-dangle": [
      "error",
      { "objects": "always-multiline", "arrays": "always-multiline" }
    ],
    "space-before-function-paren": [
      "error",
      { "asyncArrow": "always", "named": "never" }
    ],
    "lines-between-class-members": ["error"]
  }
}
